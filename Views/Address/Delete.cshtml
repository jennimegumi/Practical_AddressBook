@model Practical_AddressBook1.Models.AddressBookLogs
@{
    ViewData["Title"] = "Delete Person Data";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]?.ToString()</h3>
<hr />

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <b>Error:</b>
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" action="Delete" class="form-control mt-3" autocomplete="off">
    <div class="mb-3">
        <label class="form-label" asp-for="PersonID"></label>
        <input type="text" class="form-control" asp-for="PersonID" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PersonName"></label>
        <input type="text" class="form-control" asp-for="PersonName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PersonAddress"></label>
        <input type="text" class="form-control" asp-for="PersonAddress" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="City"></label>
        <input type="text" class="form-control" asp-for="City" readonly />
    </div>
    <div>
        <div class="btn-group col-lg-12">
            <button type="submit" value="delete" class="btn btn-danger">Delete</button>
            <a asp-controller="Address" asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back to list</a>
        </div>
    </div>
</form>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
